<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="description" content={{ description }}>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ title }}</title>

        {# BEGIN CSS IMPORTS #}
        <link rel="stylesheet" href="/assets/css/index.css">
        {# END CSS IMPORTS #}

        {# BEGIN SOCIAL SHARE IMPORTS #}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/assisfery/SocialShareJS@1.4/social-share.min.css"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>
        <script src="https://cdn.jsdelivr.net/gh/assisfery/SocialShareJS@1.4/social-share.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
        {# END SOCIAL SHARE IMPORTS #}

        {# BEGIN JAVASCRIPT IMPORTS #}
        <script defer src="/assets/js/video-url-shortener.js"></script>
        <script defer type="text/javascript" src="/assets/js/header.js"></script>
        {# END JAVASCRIPT IMPORTS #}
    </head>
    <body>
        {# BEGIN HEADER #}
        {% include "../components/blocks/header.block.njk" %}
        {# END HEADER #}
        <main>
            <div class="post">
                {# BEGIN FEATURED IMAGE #}
                <div class="post__imgBox">
                    <div class="post__imgBox-title">
                        <h1>{{ title }}</h1>
                        <img src={{featuredImage}} alt="Post Image">
                    </div>
                    <div class="post__imgBox-textBox">
                        <p class="post__imgBox-textBox__category">{{ category | fixCategory }}</p>
                        <p class="post__imgBox-textBox__description">{{ description }}</p>
                        <p  class="post__imgBox-textBox__publishDate">{{ publishDate | postDate }}</p>
                    </div>
                </div>
                {# END FEATURED IMAGE #}

                {# BEGIN POST CONTENT #}
                <div class="post__mainContent">
                    {{ content | safe }}
                </div>
                {# END POST CONTENT #}

                {# BEGIN FEATURED VIDEO #}
                {% if featuredVideo != undefined %}
                    <div>
                        <iframe width="600" height="315" src={{ featuredVideo }} title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                    </div>
                {% endif %}
                {# END FEATURED VIDEO #}

                {# BEGIN POST REACTION #}
                <div class="reactions">
                    <ul class="reaction_list">
                        <li class="reaction_box__like">
                            <img src="/assets/icons/like-icon.png" alt="Like Icon">
                        </li>
                    </ul>
                </div>
                {# END POST REACTION #}

                {# BEGIN AUTHOR #}
                <div class="post__author">
                    <h3>
                        <span>Author:</span>
                        {{ author }}
                    </h3>
                </div>
                {# END AUTHOR #}

            </div>
        </main>

        {# BEGIN POST SHARE LINKS #}
        <aside>
            <div style="z-index: 1 !important; width: 2vw;" class="ss-box ss-shadow ss-fixed ss-left" data-ss-content="false" data-ss-social="facebook, whatsapp, twitter, email, linkedin, reddit"></div>
        </aside>
        {# END POST SHARE LINKS #}

        {# BEGIN FOOTER #}
        {% include "../components/blocks/footer.block.njk" %}
        {# END FOOTER #}
    </body>
</html>