{% macro macro_post(title, description, category, author, minRead, image) %}
    <div class="post-card">
        <div class="post-card__imgBox">
            <img src={{ image }} alt="post image">
        </div>
        <div class="post-card__contentBox">
            <p>{{ category }}</p>
            <h2>{{ title }}</h2>
            <p>{{ description }}</p>
            <h3>Author: <span>{{ author }}</span></h3>
            <h4>{{ minRead }} min read</h4>
        </div>
    </div>
{% endmacro %}